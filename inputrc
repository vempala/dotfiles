# Use Vi, not Emacs, style editing
set editing-mode vi

"\e[A": history-search-backward
"\e[B": history-search-forward
"\C-l":'clear\n'

set keymap vi-command
"gg": beginning-of-history
"G": end-of-history

# kartikhere
# see options here -> http://zsh.sourceforge.net/Doc/Release/Editor-Functions-Index.html#Editor-Functions-Index-1_tp_letter-V
#"H": beginning-of-line
#"L": end-of-line

